datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")

}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model Product {
  id              Int      @id @default(autoincrement())
  name            String
  description     String?
  image           String?
  price           Float
  category        String
  quantity        Int
  inventoryStatus String
  rating          Int
}

model Review {
  id          Int      @id @default(autoincrement())
  name        String
  image       String
  description String
  review      String
  rating      Int
  picture     String
}
